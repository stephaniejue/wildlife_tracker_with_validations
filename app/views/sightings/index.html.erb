<p id="notice"><%= notice %></p>

<h1>Listing Sightings</h1>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Animal</th>
      <th>Region</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sightings.each do |sighting| %>
      <tr>
        <td><%= sighting.date.strftime("%m/%d/%Y %H:%M") %></td>
        <td><%= sighting.latitude %></td>
        <td><%= sighting.longitude %></td>
        <td><%= sighting.animal.common_name %></td>
        <td><%= sighting.region.name %></td>
        <td><%= link_to 'Show', sighting %></td>
        <td><%= link_to 'Edit', edit_sighting_path(sighting) %></td>
        <td><%= link_to 'Destroy', sighting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div id="calendar"></div>

<%= link_to 'New Sighting', new_sighting_path %> | <%= link_to 'Animals', animals_path %> | <%= link_to 'Regions', regions_path %>
